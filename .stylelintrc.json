{
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "block-no-empty": null,
      "selector-class-pattern": null,
     "number-max-precision": null,
     "order/order": [
              "custom-properties",
              "declarations"
          ],
          "order/properties-order": [
      [
        "content",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "display",
        "align-items",
        "justify-content",
        "flex",
        "flex-wrap",
        "flex-direction",
        "flex-grow",
        "flex-shrink",
        "flex-basis",
        "grid",
        "grid-template-columns",
        "grid-template-rows",
        "grid-template-areas",
        "grid-gap",
        "grid-column",
        "grid-row",
        "grid-area",
        "width",
        "height",
        "max-width",
        "max-height",
        "min-width",
        "min-height",
        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "border",
        "border-radius",
        "box-shadow",
        "background",
        "color",
        "font",
        "font-size",
        "font-weight",
        "line-height",
        "text-align",
        "text-decoration",
        "text-transform",
        "text-shadow",
        "overflow",
        "opacity",
        "transition",
        "animation",
        "z-index",
        "cursor",
        "user-select",
        "pointer-events",
        "box-sizing",
        "outline",
        "outline-color",
        "outline-style",
        "outline-width",
        "clip-path",
        "backdrop-filter",
        "filter",
        "transform",
        "transform-origin",
        "will-change",
        "perspective",
        "perspective-origin",
        "counter-reset",
        "counter-increment"
      ],
      {
        "unspecified": "bottom"
      }
  ]
    },
     "plugins": [
      "stylelint-order"
    ]
  }
  